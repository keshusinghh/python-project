# SwiftServe Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/swiftserve_db
POSTGRES_USER=swiftserve_user
POSTGRES_PASSWORD=swiftserve_password
POSTGRES_DB=swiftserve_db

# For local development (SQLite)
SQLALCHEMY_DATABASE_URI=sqlite:///swiftserve.db

# SocketIO Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Map Configuration
MAP_DEFAULT_LAT=12.9716
MAP_DEFAULT_LNG=77.5946
MAP_DEFAULT_ZOOM=13

# Application Settings
MAX_DELIVERY_RADIUS_KM=10
ORDER_TIMEOUT_MINUTES=30
DELIVERY_AGENT_RADIUS_KM=5

# Payment Settings (Mock)
PAYMENT_SUCCESS_REDIRECT=/payment/success
PAYMENT_FAILURE_REDIRECT=/payment/failure

# Email Settings (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (Optional - for production)
REDIS_URL=redis://localhost:6379/0

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif